#!/bin/sh
HOSTNAME=$(hostname 2>/dev/null)
IP_INFO=$(ip -o -4 addr show scope global 2>/dev/null | awk '{print "  "$2": "$4}' | sed 's#/.*##')
GATEWAY=$(ip route show default 2>/dev/null | awk '{print $3}' | head -n 1)
DNS=$(awk '/^nameserver/ {print $2}' /etc/resolv.conf | paste -sd ' ' -)

[ -n "$HOSTNAME" ] || HOSTNAME="N/A"
[ -n "$IP_INFO" ] || IP_INFO="  N/A"
[ -n "$GATEWAY" ] || GATEWAY="N/A"
[ -n "$DNS" ] || DNS="N/A"

cat <<INFO
Hostname: $HOSTNAME
IP Address(es):
$IP_INFO
Gateway: $GATEWAY
DNS: $DNS
INFO
